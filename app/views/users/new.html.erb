<h1>Register</h1>
<br>

<%= form_for(@user) do |f| %>
  <div class="form-group">
  <h5>First Name:</h5> <%= f.text_field :first_name, class:"form-control", placeholder:"first name?"%>
  </div>

  <div class="form-group">
  <h5>Last Name:</h5> <%= f.text_field :last_name, class:"form-control", placeholder:"what is your last name?"%>
  </div>

  <div class="form-group">
  <h5>Email:</h5> <%= f.text_field :email, class:"form-control", placeholder:"what is your email?" %>
  </div>

  <div class="form-group">
  <h5>Password:</h5> <%= f.password_field :password, class:"form-control", placeholder:"what is your password?" %>
  </div>

  <div class="form-group">
  <h5>Confirm Your Password:</h5> <%= f.password_field :password_confirmation, class:"form-control", placeholder:"confirm your password" %>
  </div>
  <%= f.submit "Register", class: 'btn btn-primary' %>
<% end %>